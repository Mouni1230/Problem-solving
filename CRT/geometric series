#include <stdio.h>
#include<math.h>
int main()
{
    int n;
    printf("enter number:");
    scanf("%d",&n);
    if(n%2==1)
    {
        int term=pow(2,n/2);
        printf("The %dth term is :%d\n",n,term);
    }
    else
    {
        int term=pow(3,(n/2)-1);//even term-(+1)
        printf("The %dth term is :%d\n",n,term);
    }
    return 0;
}
