#include <stdio.h>

int main()
{
    int n,term;
    printf("enter n value:");
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
   {
       if(n%2==1)
       {
         term=7*(n/2);
       }
       else{
           term=6*(n/2-1);
       }
   }
     printf("The %dth term is :%d\n",n,term);
 
    return 0;
}
