#include <stdio.h>

int main()
{
    int n,rem,sum;
    printf("enter number:");
    scanf("%d",&n);
    int a=n;
    while(n>0)
    {
        rem=n%10;
        sum+=rem;
        n=n/10;
    }
    if(sum==a)
    {
        printf("%d is a Niven's number",a);
    }
    else
    {
        printf("%d is not a Niven's number",a);
    }
    
    return 0;
}
